<div class="container">
  <h1 class="text-center mt-4">Movies</h1>
  <div data-controller="search-movies">
    <%= form_with url: "/movies", method: :get, html: { class: 'mt-3', data: { search_movies_target: 'form' } } do |form| %>
      <%= form.text_field %>
    <% end %>
    <%= render 'list', movies: @movies %>
  </div>
</div>
