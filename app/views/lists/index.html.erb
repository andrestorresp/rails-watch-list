<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h3 class="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-flat' %>
  </div>
  <div class="d-flex">
    <% @lists.each do |list| %>
      <div class="container lista d-flex">
        <%= link_to list_path(list), class: "w-100 text-decoration-none" do %>
          <div class="cards">
            <div class="card-category w-100" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
              <%= list.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
